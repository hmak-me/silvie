{
  "name": "create-silvie-app",
  "version": "0.0.10",
  "description": "Create a Silvie app boilerplate",
  "main": "./index.js",
  "scripts": {
    "build": "rimraf ./lib && cross-env NODE_ENV=production babel index.ts -d lib -x \".ts,.js\" && ncp ./templates ./lib/templates",
    "prepare": "npm run build"
  },
  "bin": {
    "create-silvie-app": "./index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/silviejs/silvie.git"
  },
  "homepage": "https://silviejs.org",
  "keywords": [
    "silvie",
    "boilerplate",
    "template",
    "create-silvie-app",
    "typescript",
    "javascript",
    "nodejs"
  ],
  "author": "Hossein Maktoobian",
  "license": "MIT",
  "dependencies": {
    "ncp": "^2.0.0",
    "rimraf": "^3.0.2"
  }
}
