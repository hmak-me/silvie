{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es5",
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "build",
		"baseUrl": "./src",
		"experimentalDecorators": true,
		"paths": {
			"base/*": ["./src/base/*"],
			"bootstrap/*": ["./src/bootstrap/*"],
			"controllers/*": ["./src/controllers/*"],
			"middlewares/*": ["./src/middlewares/*"]
		}
	}
}
