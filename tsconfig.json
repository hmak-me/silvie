{
	"compilerOptions": {
		"declaration": true,
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es5",
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "./lib",
		"experimentalDecorators": true,
		"emitDeclarationOnly": true,
		"baseUrl": ".",
		"paths": {
			"src/*": ["./src/*"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules", "lib"]
}
